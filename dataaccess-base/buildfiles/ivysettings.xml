<ivysettings>
  <settings defaultResolver="chained"/>
  <resolvers>
    <chain name="chained" returnFirst="true">
      <filesystem name="local">
        <artifact pattern="${ivy.settings.dir}/repository/local/[artifact]-[revision].[ext]" />
      </filesystem>
      <filesystem name="main">
        <artifact pattern="${ivy.settings.dir}/repository/main/[artifact]-[revision].[ext]" />
      </filesystem>
      <filesystem name="project" checkmodified="true" changingPattern=".*SNAPSHOT">
        <artifact pattern="${ivy.settings.dir}/../../build/repository/project/[artifact]-[revision].[ext]" />
      </filesystem>
    </chain>
  </resolvers>
</ivysettings>