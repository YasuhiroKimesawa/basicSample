<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	<changeSet author="kimesawa" id="007">
		<createSequence sequenceName="eventer_id" schemaName="eventer" startValue="1" />

		<createTable tableName="eventer" remarks="主催者" schemaName="eventer">
			<column name="id" type="integer" remarks="主催者ID">
				<constraints primaryKey="true" nullable="false" primaryKeyName="pk_id" />
			</column>
			<column name="last_name" type="varchar(12)" remarks="姓">
				<constraints nullable="false"/>
			</column>
			<column name="first_name" type="varchar(12)" remarks="名">
				<constraints nullable="false"/>
			</column>
			<column name="telephone_number" type="varchar(14)" remarks="電話番号">
				<constraints nullable="false"/>
			</column>
			<column name="mail_address" type="varchar(50)" remarks="メールアドレス">
				<constraints nullable="false" unique="true" uniqueConstraintName="uq_eventer_mail_address"
                    foreignKeyName="fk_eventer_account" references="account.account(mail_address)" deleteCascade="true"/>
			</column>
			<column name="create_date" type="timestamp without time zone" remarks="作成日時">
				<constraints nullable="false"/>
			</column>
			<column name="update_date" type="timestamp without time zone" remarks="更新日時">
				<constraints nullable="false"/>
			</column>
		</createTable>
	</changeSet>

</databaseChangeLog>