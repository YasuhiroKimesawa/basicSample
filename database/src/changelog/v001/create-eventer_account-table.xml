<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	<changeSet author="kimesawa" id="1-3">
		<createTable tableName="eventer_account" remarks="主催者アカウント" schemaName="eventer">
			<column name="eventer_id" type="integer" remarks="主催者ID">
				<constraints primaryKey="true" primaryKeyName="pk_eventer_id" nullable="false"
					references="eventer.eventer(id)" foreignKeyName="fk_eventer_account_eventer" deleteCascade="true" />
			</column>
			<column name="password" type="varchar(8)" remarks="パスワード">
				<constraints nullable="false"/>
			</column>
			<column name="create_date" type="timestamp without time zone" remarks="作成日時">
				<constraints nullable="false"/>
			</column>
			<column name="update_date" type="timestamp without time zone" remarks="更新日時">
				<constraints nullable="false"/>
			</column>
		</createTable>
	</changeSet>

</databaseChangeLog>